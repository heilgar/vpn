# Example Terraform variables file
# Copy this to terraform.tfvars and customize for your deployment

# AWS Configuration
aws_region = "us-east-1"
environment = "production"
project_name = "wireguard-vpn"

# Network Configuration
vpc_cidr = "10.0.0.0/16"
public_subnet_cidr = "10.0.1.0/24"
availability_zone = "us-east-1a"

# EC2 Configuration
instance_type = "t4g.nano" # ARM-based Graviton2 ($0.0042/hr)
volume_size = 20

# WireGuard Configuration
wireguard_port = 51820

# Security Configuration
# Leave empty to use SSM Session Manager only (recommended)
allowed_ssh_cidrs = []
# Example for SSH access: allowed_ssh_cidrs = ["1.2.3.4/32"]

# Monitoring Configuration
enable_detailed_monitoring = true
cloudwatch_retention_days = 30

# Backup Configuration
enable_automated_backups = true
backup_retention_days = 7

# Additional Tags
additional_tags = {
  Owner = "DevOps Team"
  CostCenter = "Infrastructure"
}
